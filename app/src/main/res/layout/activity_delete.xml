<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wallyson.com.br.mypocket.view.DeleteActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/deleteCard"
        android:id="@+id/textView16"
        android:layout_above="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deleteCard"
        android:id="@+id/btnDeleteCard"
        android:layout_alignParentBottom="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deleteAccount"
        android:id="@+id/btnDeleteAccount"
        android:layout_alignTop="@+id/btnDeleteCard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/deleteAccount"
        android:id="@+id/textView17"
        android:layout_alignBottom="@+id/spnDeleteAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnDeleteCard"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignRight="@+id/btnDeleteAccount"
        android:layout_alignEnd="@+id/btnDeleteAccount"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnDeleteAccount"
        android:layout_above="@+id/btnDeleteCard"
        android:layout_toEndOf="@+id/btnDeleteCard"
        android:layout_marginBottom="59dp"
        android:layout_alignLeft="@+id/spnDeleteCard"
        android:layout_alignStart="@+id/spnDeleteCard" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/spnDeleteCard"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:background="@mipmap/delete"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView15"
            android:layout_alignStart="@+id/textView15"
            android:layout_above="@+id/textView15"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15"
            android:layout_weight="1.31" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_above="@+id/spnDeleteCard"
            android:layout_alignLeft="@+id/spnDeleteCard"
            android:layout_alignStart="@+id/spnDeleteCard"
            android:layout_marginBottom="56dp"
            android:textSize="40px"
            android:textColor="#0e7fbb"
            android:text="@string/deleteInformation"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
